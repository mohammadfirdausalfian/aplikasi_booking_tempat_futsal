<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    tools:context=".MenuLapangan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="352dp"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <Button

                android:layout_width="352dp"
                android:layout_height="146dp"
                android:layout_gravity="center"
                android:background="#B595D4E8"
                android:drawableLeft="@drawable/icon_sepakbola"
                android:text="AYO FUTSAL" />

            <androidx.cardview.widget.CardView
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="15dp">

            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>


        <FrameLayout
            android:layout_width="391dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:background="@drawable/sm3">

        </FrameLayout>

        <Button
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:text="LAPANGAN 1 : SINTETIS"
            android:layout_gravity="center">

        </Button>


        <FrameLayout
            android:layout_width="391dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:background="@drawable/sm4">

        </FrameLayout>

        <Button
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:text="LAPANGAN 2 : PLESTER"
            android:layout_gravity="center">

        </Button>


        <FrameLayout
            android:layout_width="391dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:background="@drawable/sm51">

        </FrameLayout>

        <Button
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:text="LAPANGAN 3 : SINTETIS"
            android:layout_gravity="center">

        </Button>

        <FrameLayout
            android:layout_width="391dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:background="@drawable/sm61">

        </FrameLayout>

        <Button
            android:layout_width="397dp"
            android:layout_height="wrap_content"
            android:text="LAPANGAN 4 : PLESTER"
            android:layout_gravity="center">

        </Button>

    </LinearLayout>

</ScrollView>